<!DOCTYPE html>
<html>
<head>
  <title>Dwellwell</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<nav>
		<div class="login">
			<% if user_signed_in? %>
				Signed in as <%= current_user.email %> | <%= link_to "dashboard", dashboard_path %> | Not you? <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
				<% else %>
					<%= link_to "sign in", new_user_session_path %>
			<% end %>
		</div>
	</nav>
	<p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

<%= yield %>

</body>
</html>
